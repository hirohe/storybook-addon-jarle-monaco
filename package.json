    "@storybook/addon-links": "^6.4.12",
    "@storybook/react": "^6.4.12",
    "@types/lodash": "^4.14.181",
    "babel-loader": "^8.2.3",
    "canvas-confetti": "^1.5.1",
    "lodash": "^4.17.21",
    "prettier": "^2.5.1",
    "typescript": "^4.5.5"
  },
  "peerDependencies": {
    "@storybook/addons": "^6",
