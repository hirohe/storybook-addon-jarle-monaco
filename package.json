    "monaco-editor": "^0.33.0",
    "monaco-jsx-highlighter": "^2.0.4",
    "react": "^16.14.0",
    "react-dom": "^16.14.0"
  },
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@storybook/addon-actions": "^6.4.12",
