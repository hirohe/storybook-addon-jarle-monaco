{
  "compilerOptions": {
    "lib": ["esnext", "dom"],
    "target": "ES6",
    "module": "ES6",
    "moduleResolution": "Node",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "outDir": "dist",
    "sourceMap": false
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
